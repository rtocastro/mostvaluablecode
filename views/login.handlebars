<!--EMAIL/PASSWORD FORM-->
<h2>
    <img src="./images/ddsignin.png" alt="Sign In">
</h2>
<div class="container is-widescreen">
    <div class="notification is-info">
        <div class="field">
            <p class="control has-icons-left has-icons-right">
                <input class="input" type="email" placeholder="E-mail" id="emailsignin">
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
                <span class="icon is-small is-right">
                    <i class="fas fa-check"></i>
                </span>
            </p>
        </div>
        <div class="field">
            <p class="control has-icons-left">
                <input class="input" type="password" placeholder="Password" id="passsignin">
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
        </div>
        <div class="field">
            <p class="control">
                <button class="button" id="loginbutton" type="button">
                    <strong>Login</strong>
                </button>
            </p>
        </div>
    </div>
</div>

<br>
<h2>
    <img src="./images/ddsignup.png" alt="sign up">
</h2>
<br>

<!-- SIGN UP FORM-->
<div class="container is-widescreen">
    <div class="notification is-info">

        <div class="m-3"></div>
        <div class="field">
            <p class="control has-icons-left has-icons-right ">
                <input class="input" type="email" placeholder="E-mail" id="signupemail">
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
                <span class="icon is-small is-right">
                    <i class="fas fa-check"></i>
                </span>
            </p>
        </div>
        <div class="field">
            <p class="control has-icons-left">
                <input class="input" type="password" placeholder="Password" id="signuppass">
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
        </div>
        <div class="field">
            <p class="control has-icons-left">
                <input class="input" type="password" placeholder="Confirm Password" id="signuppassconf">
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
        </div>
        <div class="field is-horizontal-center">
            <p class="control">
                <button class="button buttoncolor" id="signupbutton">
                    <strong>Sign Up</strong>
                </button>
            </p>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script src="./js/script.js" type="text/javascript"></script>

